{
  "compilerOptions": {
    "outDir": "./dist/",
    "strict": true,
    "sourceMap": true,
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noEmitOnError": false,
    "typeRoots": [
      "./src/customTypings", 
      "./node_modules/@types"
    ],
    "baseUrl": "./",
    "paths": {
      "utils/*": [ "src/utils/*" ],
      "shared/*": [ "src/shared/*" ],
      "src/*": [ "src/*" ],
      "test/*": [ "test/utils/*" ]
    }
  }
}
